{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node"],
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "allowEmptyCodegenFiles": true
  },
  "files": [
    "main.ts",
    "polyfills.ts",
    "app/app.module.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
,
  "include": [
    "src/**/*.d.ts"
  ]
}